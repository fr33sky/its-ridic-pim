<%= simple_form_for(@sale, html: { class: "form-horizontal"} ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :product %>
    <%= f.association :payment %>
    <%= f.association :contact %>
    <%= f.input :sale_price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
