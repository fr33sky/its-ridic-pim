<p id="notice"><%= notice %></p>

<h1>Listing Adjustments</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Adjustment type</th>
      <th>Adjusted quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adjustments.each do |adjustment| %>
      <tr>
        <td><%= adjustment.product %></td>
        <td><%= adjustment.adjustment_type %></td>
        <td><%= adjustment.adjusted_quantity %></td>
        <td><%= link_to 'Show', adjustment %></td>
        <td><%= link_to 'Edit', edit_adjustment_path(adjustment) %></td>
        <td><%= link_to 'Destroy', adjustment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

