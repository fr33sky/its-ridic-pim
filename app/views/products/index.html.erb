<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Upc</th>
      <th>Price</th>
      <th>On Hand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="all-products">
    <% @products.each do |product| %>
      <tr id="product-<%= product.id %>">
        <td><%= product.name %></td>
        <td><%= product.upc %></td>
        <td><%= product.price %></td>
        <td><%= product.on_hand %></td>
        <td><%= link_to 'Show', product, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="errors">
</div>
<%= render 'new_product_form' %>
<br>

<div class="spinner">
  <i class="fa fa-refresh fa-spin" aria-hidden="true"></i>
  <small>Working...</small>
</div>

<%= link_to "Fetch", fetch_products_path, remote: true, class: "btn btn-success btn-sm fetch-products" %>

