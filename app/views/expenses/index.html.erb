<p id="notice"><%= notice %></p>

<h1>Listing Expenses</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Expense account</th>
      <th>Description</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.expense_account %></td>
        <td><%= expense.description %></td>
        <td><%= expense.amount %></td>
        <td><%= link_to 'Show', expense %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

