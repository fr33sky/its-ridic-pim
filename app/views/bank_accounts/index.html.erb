<p id="notice"><%= notice %></p>

<h1>Listing Bank Accounts</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Qbo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.name %></td>
        <td><%= bank_account.description %></td>
        <td><%= bank_account.qbo_id %></td>
        <td><%= link_to 'Show', bank_account %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Fetch", fetch_bank_accounts_path, remote: true, class: "btn btn-success btn-sm" %>
<div class="spinner">
  <i class="fa fa-refresh fa-spin" aria-hidden="true"></i>
  <small>Retrieving accounts from QBO, please wait...</small>
</div>

<script>
$( document ).ready(function() {
  $(".spinner").hide();

  $(document).ajaxStart(function(){
    $(".spinner").show();
  });

  $(document).ajaxStop(function(){
    $(".spinner").hide();
    location.reload();
  });
});
</script>


